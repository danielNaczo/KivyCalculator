<CalculatorWidget>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Label:
            id: calculation
            font_size: 50
            halign: "right"
            size_hint_y: 0.2

        #container for NumPad
        BoxLayout:
            orientation: 'horizontal'

            #1st column of calculator
            BoxLayout:
                orientation: 'vertical'

                Button:
                    text: "/"
                    on_release: root.add_Value(self.text)
                Button:
                    text: "7"
                    on_release: root.add_Value(self.text)
                Button:
                    text: "4"
                    on_release: root.add_Value(self.text)
                Button:
                    text: "1"
                    on_release: root.add_Value(self.text)

            #2nd column of calculator
            BoxLayout:
                orientation: 'vertical'

                Button:
                    text: "*"
                    on_release: root.add_Value(self.text)
                Button:
                    text: "8"
                    on_release: root.add_Value(self.text)
                Button:
                    text: "5"
                    on_release: root.add_Value(self.text)
                Button:
                    text: "2"
                    on_release: root.add_Value(self.text)

            #3rd column of calculator
            BoxLayout:
                orientation: 'vertical'

                Button:
                    text: "-"
                    on_release: root.add_Value(self.text)
                Button:
                    text: "9"
                    on_release: root.add_Value(self.text)
                Button:
                    text: "6"
                    on_release: root.add_Value(self.text)
                Button:
                    text: "3"
                    on_release: root.add_Value(self.text)

            #4th column of calculator
            BoxLayout:
                orientation: 'vertical'

                Button:
                    text: "+"
                    size_hint_y: 0.25
                    on_release: root.add_Value(self.text)
                Button:
                    text: "C"
                    size_hint_y: 0.25
                    on_release: root.clear()
                Button:
                    text: "="
                    size_hint_y: 0.5
                    on_release: root.evaluate()
